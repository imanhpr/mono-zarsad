{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext"],
    "module": "nodenext",
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    "rewriteRelativeImportExtensions": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true
  }
}
